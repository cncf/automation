{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/cncf/automation/utilities/dot-project/schema/v1.0.0/project.json",
  "title": "CNCF Project Metadata",
  "description": "Schema for CNCF .project repository project.yaml files",
  "type": "object",
  "required": [
    "schema_version",
    "slug",
    "name",
    "description",
    "maturity_log",
    "repositories"
  ],
  "properties": {
    "adopters": {
      "description": "Link to ADOPTERS.md or adopters list",
      "$ref": "#/$defs/PathRef"
    },
    "artwork": {
      "type": "string",
      "description": "Artwork/logo URL",
      "format": "uri"
    },
    "audits": {
      "type": "array",
      "description": "Security/performance audits",
      "items": {
        "$ref": "#/$defs/Audit"
      }
    },
    "cncf_slack_channel": {
      "type": "string",
      "description": "CNCF Slack channel",
      "pattern": "^#"
    },
    "description": {
      "type": "string",
      "description": "One-line project description"
    },
    "documentation": {
      "description": "Documentation configuration",
      "$ref": "#/$defs/DocumentationConfig"
    },
    "governance": {
      "description": "Governance configuration",
      "$ref": "#/$defs/GovernanceConfig"
    },
    "landscape": {
      "description": "CNCF Landscape location",
      "$ref": "#/$defs/LandscapeConfig"
    },
    "legal": {
      "description": "Legal configuration",
      "$ref": "#/$defs/LegalConfig"
    },
    "mailing_lists": {
      "type": "array",
      "description": "Mailing list addresses",
      "items": {
        "type": "string"
      }
    },
    "maturity_log": {
      "type": "array",
      "description": "Maturity phase transition history (chronological order)",
      "items": {
        "$ref": "#/$defs/MaturityEntry"
      }
    },
    "name": {
      "type": "string",
      "description": "Project display name"
    },
    "package_managers": {
      "type": "object",
      "description": "Registry identifiers (e.g., npm package name, Docker Hub image)",
      "additionalProperties": {
        "type": "string"
      }
    },
    "project_lead": {
      "type": "string",
      "description": "GitHub handle or team (org/team-name) of primary contact"
    },
    "repositories": {
      "type": "array",
      "description": "Repository URLs",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "schema_version": {
      "type": "string",
      "description": "Schema version",
      "enum": [
        "1.0.0"
      ]
    },
    "security": {
      "description": "Security configuration",
      "$ref": "#/$defs/SecurityConfig"
    },
    "slug": {
      "type": "string",
      "description": "Unique project identifier",
      "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$|^[a-z0-9]$"
    },
    "social": {
      "type": "object",
      "description": "Social platform URLs",
      "additionalProperties": {
        "type": "string",
        "format": "uri"
      }
    },
    "type": {
      "type": "string",
      "description": "Project type (e.g., project, platform, specification)"
    },
    "website": {
      "type": "string",
      "description": "Project website URL",
      "format": "uri"
    }
  },
  "additionalProperties": false,
  "$defs": {
    "Audit": {
      "type": "object",
      "required": [
        "date",
        "type",
        "url"
      ],
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "type": {
          "type": "string",
          "description": "Audit type (e.g., security, performance)"
        },
        "url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "DocumentationConfig": {
      "type": "object",
      "properties": {
        "api": {
          "$ref": "#/$defs/PathRef"
        },
        "architecture": {
          "$ref": "#/$defs/PathRef"
        },
        "readme": {
          "$ref": "#/$defs/PathRef"
        },
        "support": {
          "$ref": "#/$defs/PathRef"
        }
      }
    },
    "GovernanceConfig": {
      "type": "object",
      "properties": {
        "change_process": {
          "description": "Change process documentation",
          "$ref": "#/$defs/PathRef"
        },
        "code_of_conduct": {
          "description": "Code of conduct",
          "$ref": "#/$defs/PathRef"
        },
        "codeowners": {
          "$ref": "#/$defs/PathRef"
        },
        "comms_channels": {
          "description": "Communication channels listing",
          "$ref": "#/$defs/PathRef"
        },
        "community_calendar": {
          "description": "Community calendar",
          "$ref": "#/$defs/PathRef"
        },
        "contributing": {
          "$ref": "#/$defs/PathRef"
        },
        "contributor_guide": {
          "description": "Contributor guide",
          "$ref": "#/$defs/PathRef"
        },
        "contributor_ladder": {
          "description": "Contributor ladder documentation",
          "$ref": "#/$defs/PathRef"
        },
        "decision_making_process": {
          "description": "Decision-making process documentation",
          "$ref": "#/$defs/PathRef"
        },
        "gitvote_config": {
          "$ref": "#/$defs/PathRef"
        },
        "governance_doc": {
          "$ref": "#/$defs/PathRef"
        },
        "maintainer_lifecycle": {
          "description": "Maintainer lifecycle documentation",
          "$ref": "#/$defs/MaintainerLifecycle"
        },
        "roles_and_teams": {
          "description": "Roles and teams documentation",
          "$ref": "#/$defs/PathRef"
        },
        "sub_project_docs": {
          "description": "Subproject documentation",
          "$ref": "#/$defs/PathRef"
        },
        "sub_project_list": {
          "description": "Subproject listing",
          "$ref": "#/$defs/PathRef"
        },
        "vendor_neutrality_statement": {
          "description": "Vendor neutrality statement",
          "$ref": "#/$defs/PathRef"
        }
      }
    },
    "IdentityType": {
      "description": "Contributor identity agreements. DCO can be used alone or with CLA. CLA requires DCO.",
      "type": "object",
      "properties": {
        "cla_url": {
          "description": "Link to CLA document",
          "$ref": "#/$defs/PathRef"
        },
        "dco_url": {
          "description": "Link to DCO document",
          "$ref": "#/$defs/PathRef"
        },
        "has_cla": {
          "type": "boolean",
          "description": "Whether the project uses CLA (requires DCO)"
        },
        "has_dco": {
          "type": "boolean",
          "description": "Whether the project uses DCO"
        }
      }
    },
    "LandscapeConfig": {
      "type": "object",
      "required": [
        "category",
        "subcategory"
      ],
      "properties": {
        "category": {
          "type": "string",
          "description": "CNCF Landscape category"
        },
        "subcategory": {
          "type": "string",
          "description": "CNCF Landscape subcategory"
        }
      }
    },
    "LegalConfig": {
      "type": "object",
      "properties": {
        "identity_type": {
          "description": "Contributor identity agreement (DCO, CLA, or none)",
          "$ref": "#/$defs/IdentityType"
        },
        "license": {
          "$ref": "#/$defs/PathRef"
        }
      }
    },
    "MaintainerLifecycle": {
      "description": "Maintainer lifecycle documentation",
      "type": "object",
      "properties": {
        "mentoring_program": {
          "type": "array",
          "description": "URLs to mentoring and onboarding support program documentation",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "offboarding_policy": {
          "description": "URL to emeritus/offboarding policy documentation",
          "$ref": "#/$defs/PathRef"
        },
        "onboarding_doc": {
          "description": "URL to maintainer onboarding documentation",
          "$ref": "#/$defs/PathRef"
        },
        "progression_ladder": {
          "description": "URL to maintainer advancement path documentation (committer → maintainer → lead)",
          "$ref": "#/$defs/PathRef"
        }
      }
    },
    "MaturityEntry": {
      "type": "object",
      "required": [
        "phase",
        "date",
        "issue"
      ],
      "properties": {
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "issue": {
          "type": "string",
          "description": "TOC issue URL"
        },
        "phase": {
          "type": "string",
          "enum": [
            "sandbox",
            "incubating",
            "graduated",
            "archived"
          ]
        }
      }
    },
    "PathRef": {
      "type": "object",
      "required": [
        "path"
      ],
      "properties": {
        "path": {
          "type": "string",
          "description": "File path or URL"
        }
      }
    },
    "SecurityConfig": {
      "type": "object",
      "properties": {
        "contact": {
          "description": "Security contact information",
          "$ref": "#/$defs/SecurityContact"
        },
        "policy": {
          "$ref": "#/$defs/PathRef"
        },
        "threat_model": {
          "$ref": "#/$defs/PathRef"
        }
      }
    },
    "SecurityContact": {
      "description": "Security contact information. At least one of email or advisory_url must be provided.",
      "type": "object",
      "properties": {
        "advisory_url": {
          "type": "string",
          "description": "GitHub Security Advisory URL",
          "pattern": "^https://github\\.com/.+/.+/security/advisories/new$",
          "format": "uri"
        },
        "email": {
          "type": "string",
          "description": "Security contact email address",
          "format": "email"
        }
      },
      "anyOf": [
        {
          "required": [
            "email"
          ]
        },
        {
          "required": [
            "advisory_url"
          ]
        }
      ]
    }
  }
}
